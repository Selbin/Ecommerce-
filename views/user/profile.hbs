
    <div class="jumbotron bg-grey">
    <div class="row center_div">
        <div class="col">
            <h1>User Profile</h1>
            <h2>My Orders</h2>
            <hr>
            {{#each orders}}
                <div class="card">
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            {{#each this.items}}
                                <li class="list-group list-group-flush">
                                    <span class="badge badge-secondary ml-auto">{{this.price}}</span>
                                    {{this.item.title}} | {{this.qty}} units
                                </li>
                                {{/each}}
                        </ul>
                    </div>
                        <div class="card-footer text-muted"><strong> Total Price: ${{this.cart.totalPrice}}</strong></div>
                </div>
            {{/each}}
            
       
        </div> 
    </div> 
    </div>